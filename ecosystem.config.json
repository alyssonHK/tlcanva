{
  "name": "tldraw-file-canvas",
  "script": "server.mjs",
  "instances": 1,
  "exec_mode": "fork",
  "node_args": "--max-old-space-size=512",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3001
  },
  "env_file": ".env.production",
  "log_file": "/var/log/pm2/tldraw-file-canvas.log",
  "out_file": "/var/log/pm2/tldraw-file-canvas-out.log",
  "error_file": "/var/log/pm2/tldraw-file-canvas-error.log",
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "merge_logs": true,
  "autorestart": true,
  "watch": false,
  "max_memory_restart": "1G",
  "restart_delay": 4000
}
